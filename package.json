{
  "name": "@cloudflare/telescope",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "keywords": [],
  "author": "Cloudflare",
  "license": "Apache-2.0",
  "type": "module",
  "files": [
    "dist",
    "img",
    "support"
  ],
  "bin": {
    "telescope": "dist/src/cli.js"
  },
  "scripts": {
    "build": "tsc && cp -r src/templates dist/src/ && mkdir -p dist/processors/templates && cp -r processors/templates/* dist/processors/templates/",
    "dev": "tsc --watch",
    "start": "node dist/src/cli.js",
    "test": "vitest run",
    "test:ci": "export CI=true; npm test",
    "testAction": "vitest run __tests__/browsers.test.js",
    "coverage": "vitest run --coverage",
    "clean": "rm -rf node_modules results dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "npx prettier --write .",
    "prepublishOnly": "npm run build",
    "postinstall": "npx playwright install"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/adm-zip": "^0.5.7",
    "@types/ejs": "^3.1.5",
    "@types/node": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.6",
    "eslint": "^9.39.2",
    "prettier": "^3.6.2",
    "prettier-plugin-ejs": "^1.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  },
  "dependencies": {
    "@sitespeed.io/throttle": "^5.0.0",
    "adm-zip": "^0.5.16",
    "commander": "^10.0.0",
