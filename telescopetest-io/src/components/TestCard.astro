---
export interface Props {
  testId: string;
  url: string;
  testDate: number;
  browser: string;
  name: string | null;
  description: string | null;
  screenshotUrl: string | null;
}

const { testId, url, testDate, browser, name, description, screenshotUrl } =
  Astro.props;

// Format date with timezone
const date = new Date(testDate * 1000);
const formattedDate = date.toLocaleString('en-US', {
  month: 'short',
  day: 'numeric',
  year: 'numeric',
  hour: '2-digit',
  minute: '2-digit',
  timeZoneName: 'short',
});

const noname = 'No Name';
---

<a href={`/results/${testId}`} class="card">
  <div class="screenshot">
    {
      screenshotUrl ? (
        <img
          src={screenshotUrl}
          alt={`Screenshot of ${url}`}
          loading="lazy"
          decoding="async"
        />
      ) : (
        <p>Screenshot not found.</p>
      )
    }
  </div>
  <div class="content">
    <h3>{name || noname}</h3>
    <p class="description">{description || '\u00A0'}</p>
    <p class="browser">Browser: {browser}</p>
    <p class="url">{url}</p>
    <p class="date">{formattedDate}</p>
  </div>
</a>

<style>
  .card {
    display: flex;
    flex-direction: column;
    background: var(--panel);
    border: 1px solid var(--border);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.2s;
    text-decoration: none;
    color: var(--text);
  }

  .card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    border-color: var(--brand-hover);
  }

  :global(.results-container[data-layout='vertical']) .card {
    flex-direction: row;
  }

  .screenshot {
    width: 100%;
    aspect-ratio: 16 / 10;
    background: var(--background);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    color: var(--muted);
    font-size: 14px;
  }

  .screenshot img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  :global(.results-container[data-layout='vertical']) .screenshot {
    width: 240px;
    min-width: 240px;
    aspect-ratio: auto;
  }

  .content {
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    flex: 1;
    min-width: 0;
  }

  h3 {
    font-size: 18px;
    font-weight: 600;
    margin: 0;
  }

  .description {
    font-size: 14px;
    color: var(--muted);
    margin: 0;
  }

  .browser {
    font-size: 13px;
    color: var(--muted);
    margin: 0;
  }

  .url {
    font-size: 13px;
    color: var(--muted);
    margin: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .date {
    font-size: 12px;
    color: var(--muted);
    margin: 0;
    margin-top: auto;
  }

  @media (max-width: 768px) {
    .card {
      flex-direction: column;
    }

    .screenshot {
      width: 100%;
      aspect-ratio: 16 / 10;
    }
  }
</style>
