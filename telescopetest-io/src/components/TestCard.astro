---
export interface Props {
  testId: string;
  url: string;
  testDate: number;
  browser: string;
  name: string | null;
  description: string | null;
  screenshotUrl: string | null;
}

const { testId, url, testDate, browser, name, description, screenshotUrl } =
  Astro.props;

// Format date with timezone
const date = new Date(testDate * 1000);
const formattedDate = date.toLocaleString('en-US', {
  month: 'short',
  day: 'numeric',
  year: 'numeric',
  hour: '2-digit',
  minute: '2-digit',
  timeZoneName: 'short',
});
---

<a href={`/results/${testId}`} class="test-card">
  <div class="screenshot-container">
    {
      screenshotUrl ? (
        <img
          src={screenshotUrl}
          alt={`Screenshot of ${url}`}
          loading="lazy"
          decoding="async"
        />
      ) : (
        <div class="screenshot-placeholder">
          <p class="placeholder-text">Screenshot not found.</p>
        </div>
      )
    }
  </div>
  <div class="card-content">
    <div class="card-header">
      <h3 class="test-name">{name || url}</h3>
    </div>
    {description && <p class="test-description">{description}</p>}
    <div class="metadata">
      <div class="metadata-item">
        <span class="metadata-label">Browser:</span>
        <span class="metadata-value browser-badge">{browser}</span>
      </div>
    </div>
    {name && <p class="test-url">{url}</p>}
    <p class="test-info">{formattedDate}</p>
  </div>
</a>

<style>
  /* Default: vertical layout for grid view */
  .test-card {
    display: flex;
    flex-direction: column;
    background: var(--panel);
    border: 1px solid var(--border);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.2s ease;
    text-decoration: none;
    color: var(--text);
  }

  /* Horizontal layout for list view */
  :global(.results-container[data-layout='vertical']) .test-card {
    flex-direction: row;
  }

  .test-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    border-color: var(--brand-hover);
  }

  /* Default: full width for grid view */
  .screenshot-container {
    width: 100%;
    aspect-ratio: 16 / 10;
    background: var(--background);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  /* Fixed width for list view */
  :global(.results-container[data-layout='vertical']) .screenshot-container {
    width: 240px;
    min-width: 240px;
    aspect-ratio: auto;
  }

  .screenshot-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .screenshot-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    color: var(--muted);
  }

  .screenshot-placeholder span:first-child {
    font-size: 48px;
    opacity: 0.5;
  }

  .placeholder-text {
    font-size: 14px;
  }

  .card-content {
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    flex: 1;
    min-width: 0;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: start;
    gap: 12px;
  }

  .test-description {
    font-size: 14px;
    color: var(--muted);
    margin: 0;
    line-height: 1.4;
  }

  .metadata {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .metadata-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
  }

  .metadata-label {
    color: var(--muted);
    font-weight: 500;
  }

  .metadata-value {
    color: var(--text);
  }

  .test-url {
    font-size: 12px;
    color: var(--muted);
    margin: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .test-info {
    font-size: 12px;
    color: var(--muted);
    margin: 0;
    margin-top: auto;
  }

  @media (max-width: 768px) {
    .test-card {
      flex-direction: column;
    }

    .screenshot-container {
      width: 100%;
      aspect-ratio: 16 / 10;
    }
  }
</style>
