---
export interface Props {
  testId: string;
  url: string;
  testDate: number;
  browser: string;
  name: string | null;
  screenshotUrl: string | null;
}

const { testId, url, testDate, browser, name, screenshotUrl } = Astro.props;

// Format date
const date = new Date(testDate * 1000);
const formattedDate = date.toLocaleString('en-US', {
  month: 'short',
  day: 'numeric',
  year: 'numeric',
  hour: '2-digit',
  minute: '2-digit',
});
---

<a href={`/results/${testId}`} class="test-card">
  <div class="screenshot-container">
    {
      screenshotUrl ? (
        <img src={screenshotUrl} alt={`Screenshot of ${url}`} />
      ) : (
        <div class="screenshot-placeholder">
          <span>ðŸ“¸</span>
          <span class="placeholder-text">No screenshot</span>
        </div>
      )
    }
  </div>
  <div class="card-content">
    <div class="card-header">
      <h3 class="test-name">{name || url}</h3>
      <span class="browser-badge">{browser}</span>
    </div>
    {name && <p class="test-url">{url}</p>}
    <p class="test-date">{formattedDate}</p>
  </div>
</a>

<style>
  .test-card {
    display: flex;
    flex-direction: column;
    background: var(--panel);
    border: 1px solid var(--border);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.2s ease;
    text-decoration: none;
    color: var(--text);
  }

  .test-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    border-color: var(--brand-hover);
  }

  .screenshot-container {
    width: 100%;
    aspect-ratio: 16 / 10;
    background: var(--background);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .screenshot-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .screenshot-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    color: var(--muted);
  }

  .screenshot-placeholder span:first-child {
    font-size: 48px;
    opacity: 0.5;
  }

  .placeholder-text {
    font-size: 14px;
  }

  .card-content {
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: start;
    gap: 12px;
  }

  .test-name {
    font-size: 16px;
    font-weight: 600;
    margin: 0;
    color: var(--text);
    word-break: break-word;
    line-height: 1.3;
  }

  .browser-badge {
    padding: 4px 8px;
    border-radius: 6px;
    background: var(--brand-bg);
    color: var(--brand);
    font-size: 12px;
    font-weight: 600;
    white-space: nowrap;
    text-transform: capitalize;
  }

  .test-url {
    font-size: 13px;
    color: var(--muted);
    margin: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .test-date {
    font-size: 12px;
    color: var(--muted);
    margin: 0;
  }
</style>
