---
/**
 * Icon component using Phosphor Icons
 * @see https://phosphoricons.com
 */
interface Props {
  name: string;
  size?: number;
  weight?: 'thin' | 'light' | 'regular' | 'bold' | 'fill' | 'duotone';
  color?: string;
  class?: string;
}

const {
  name,
  size = 20,
  weight = 'regular',
  color = 'currentColor',
  class: className = '',
} = Astro.props;
---

<i
  class={`ph ph-${name} ${className}`}
  style={`font-size: ${size}px; color: ${color};`}
  data-weight={weight}></i>
