---
import Page from '@/layouts/Page.astro';
import TestCard from '@/components/TestCard.astro';
import { D1TestStore } from '@/lib/d1/test-store/d1-test-store';

export const prerender = false;

// Fetch all tests from D1
const env = Astro.locals.runtime.env;
const testStore = new D1TestStore(env.TELESCOPE_DB);
const tests = await testStore.getAllTests();

// For each test, check for screenshot in R2
interface TestWithScreenshot {
  test_id: string;
  url: string;
  test_date: number;
  browser: string;
  name: string | null;
  screenshotUrl: string | null;
}

const testsWithScreenshots: TestWithScreenshot[] = await Promise.all(
  tests.map(async (test: Awaited<ReturnType<typeof testStore.getAllTests>>[0]) => {
    // Try common screenshot filenames
    const possibleFilenames = [
      'screenshot.png',
      'screenshot_final.png',
      'final.png',
    ];

    let screenshotUrl: string | null = null;

    for (const filename of possibleFilenames) {
      const key = `${test.test_id}/${filename}`;
      const obj = await env.RESULTS_BUCKET.head(key);
      if (obj) {
        screenshotUrl = `/api/tests/${test.test_id}/${filename}`;
        break;
      }
    }

    return {
      test_id: test.test_id,
      url: test.url,
      test_date: test.test_date,
      browser: test.browser,
      name: test.name,
      screenshotUrl,
    };
  }),
);
---

<Page title="Test Results">
  <h1>Test Results</h1>
  <h2>Historical test runs</h2>

  {
    testsWithScreenshots.length === 0 ? (
      <div class="empty-state">
        <p>No test results yet.</p>
        <a href="/upload" class="button button-primary">
          Upload your first test â†’
        </a>
      </div>
    ) : (
      <div class="results-grid">
        {testsWithScreenshots.map((test) => (
          <TestCard
            testId={test.test_id}
            url={test.url}
            testDate={test.test_date}
            browser={test.browser}
            name={test.name}
            screenshotUrl={test.screenshotUrl}
          />
        ))}
      </div>
    )
  }
</Page>

<style>
  h1 {
    font-size: 32px;
    font-weight: 700;
    margin: 0 0 8px 0;
  }

  h2 {
    font-size: 18px;
    font-weight: 400;
    color: var(--muted);
    margin: 0 0 24px 0;
  }

  .results-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 20px;
    margin-top: 24px;
  }

  .empty-state {
    padding: 60px;
    text-align: center;
    background: var(--panel);
    border-radius: 12px;
    border: 1px dashed var(--border);
    margin-top: 24px;
  }

  .empty-state p {
    font-size: 16px;
    color: var(--muted);
    margin-bottom: 20px;
  }

  .button {
    display: inline-block;
    padding: 10px 20px;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .button-primary {
    background: var(--brand);
    color: white;
  }

  .button-primary:hover {
    opacity: 0.9;
  }
</style>
