generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  runtime  = "cloudflare"

}

datasource db {
  provider = "sqlite"
}

model Test {
  testId      String   @id @map("test_id")
  zipKey      String   @unique @map("zip_key")
  name        String?
  description String?
  source      String
  url         String
  testDate    Int      @map("test_date")
  browser     String
  createdAt   Int      @default(dbgenerated("(unixepoch())")) @map("created_at")
  updatedAt   Int      @default(dbgenerated("(unixepoch())")) @map("updated_at")
  @@index([createdAt(sort: Desc)])
  @@index([updatedAt(sort: Desc)])
  @@index([zipKey])
  @@map("tests")
}